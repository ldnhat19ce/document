<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        <TableRow>
            <ImageButton
                android:id="@+id/btn_flashlight"
                android:layout_width="@dimen/dms_layoutmenu_imgbtn"
                android:layout_height="@dimen/dms_layoutmenu_imgbtn"
                android:layout_margin="5dp"
                android:src="@drawable/icon_flash"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="5dp"
                />
            <ImageButton
                android:id="@+id/btn_neon"
                android:layout_width="@dimen/dms_layoutmenu_imgbtn"
                android:layout_height="@dimen/dms_layoutmenu_imgbtn"
                android:layout_margin="5dp"
                android:src="@drawable/custom_neon_icon"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@android:color/transparent"
                />
            <ImageButton
                android:id="@+id/btn_polic"
                android:layout_width="@dimen/dms_layoutmenu_imgbtn"
                android:layout_height="@dimen/dms_layoutmenu_imgbtn"
                android:layout_margin="5dp"
                android:src="@drawable/custom_polic_icon"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@android:color/transparent"
                />
        </TableRow>

        <TableRow
           android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_traffic"
                android:layout_width="@dimen/dms_layoutmenu_imgbtn"
                android:layout_height="@dimen/dms_layoutmenu_imgbtn"
                android:layout_margin="5dp"
                android:src="@drawable/custom_traffic_icon"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@android:color/transparent"
                />
            <ImageButton
                android:id="@+id/btn_warring"
                android:layout_width="@dimen/dms_layoutmenu_imgbtn"
                android:layout_height="@dimen/dms_layoutmenu_imgbtn"
                android:layout_margin="5dp"
                android:src="@drawable/custom_warring_icon"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@android:color/transparent"
                />
        </TableRow>
        <TableRow
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_turn_flash"
                android:layout_width="@dimen/dms_layoutmenu_imgbtn"
                android:layout_height="@dimen/dms_layoutmenu_imgbtn"
                android:layout_margin="5dp"
                android:src="@drawable/custom_turn_flash"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@android:color/transparent"
                />
        </TableRow>

    </TableLayout>

</RelativeLayout>